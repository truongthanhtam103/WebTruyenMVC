@{
    ViewData["Title"] = "Home Page";
}
<div class="container mt-5">
    <h3 class="mb-4 font-weight-bold">Lịch Sử Đọc Truyện</h3>
    <div class="row">
        <!-- Mỗi mục trong lịch sử -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <a href="details.html">
                            <img src="img/cover1.jpg" class="card-img" alt="One Piece">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><a href="details.html">One Piece</a></h5>
                            <p class="card-text">Đã đọc đến: <strong>Chương 125</strong></p>
                            <p class="card-text"><small class="text-muted">Lần cuối đọc: 1 giờ trước</small></p>
                            <button class="btn btn-sm btn-danger">Xóa khỏi lịch sử</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Truyện tiếp theo -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <a href="details.html">
                            <img src="img/cover2.jpg" class="card-img" alt="Naruto">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><a href="details.html">Naruto</a></h5>
                            <p class="card-text">Đã đọc đến: <strong>Chương 700</strong></p>
                            <p class="card-text"><small class="text-muted">Lần cuối đọc: Hôm qua</small></p>
                            <button class="btn btn-sm btn-danger">Xóa khỏi lịch sử</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thêm nhiều mục khác tùy ý -->
    </div>
</div>